<% if @restaurants.any? %>
	<%@restaurants.each do |restaurant| %>
		<h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h2>
		<% if current_user && restaurant.user == current_user %>
			<p><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></p>
			<p><%= link_to "Delete #{restaurant.name}",restaurant_path(restaurant), method: :delete %></p>
		<% end %>
		<% unless restaurant.has_been_reviewed_by? (current_user) %>
			<p><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></p>
		<% end %>
		<h3>Reviews for <%= restaurant.name %></h3>
		<% if restaurant.reviews.any? %>
			<ul>
				<% restaurant.reviews.each do |review| %>
					<li>
						<p><%= review.thoughts %>, <strong><%= review.rating %></strong>/5</p>
						<% if review.user == current_user %>
							<p><%= link_to "Delete review", restaurant_review_path(restaurant, review), method: :delete %></p>
						<% end %>
					</li>
				<% end %>
			</ul>
		<% else %>
			<p>No reviews.</p>
		<% end %>
	<% end %>
<% else %>
	No restaurants yet
<% end %>

<a href='/restaurants/new'>Add a restaurant</a>